.order .other, .order .shop-info, .order .waimai-style {
  width: 90%;
  margin: auto;
  border: 2rpx solid white;
  border-radius: 18rpx;
  box-shadow: 0rpx 0rpx 10rpx #b4b4b4;
  padding: 15rpx;
  margin-top: 20rpx;
}
.order .waimai-style .pay, .order .waimai-style .time {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  line-height: 60rpx;
  margin-right: 5rpx;
}
.order .waimai-style text {
  font-weight: 500;
}
.order .waimai-style .style {
  font-size: 40rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 10rpx;
}
.order .waimai-style .address {
  display: flex;
  justify-content: space-between;
  font-size: 42rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.order .shop-info .shop-name {
  font-size: 40rpx;
  color: #9f9f9f;
  margin: 10rpx 0;
}
.order .shop-info .foods {
  display: flex;
}
.order .shop-info .foods .sale-info {
  display: flex;
  flex: 1;
  justify-content: space-between;
}
.order .shop-info .foods .sale-info .name-desc {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 2%;
}
.order .shop-info .fee {
  margin-top: 10rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #c8c8c8;
}
.order .shop-info .fee .baozhuang {
  display: flex;
  justify-content: space-between;
  margin-bottom: 11rpx;
}
.order .shop-info .fee .peisong {
  display: flex;
  justify-content: space-between;
}
.order .shop-info .total {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.order .other .ps {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  margin-top: 10rpx;
}
.order .other .ps .ps-text {
  color: #c8c8c8;
}
.send-order {
  display: flex;
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
}
.send-order .order-button .button {
  background-color: #03b5fd;
  width: 200rpx;
  border-radius: 50rpx;
  color: white;
  font-size: 30rpx;
}