.remark-container {
  width: 90%;
  margin: 30rpx auto;
}
.remark-container .textarea {
  min-width: 100%;
  background-color: #fafafa;
}
.remark-container .quick-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}
.remark-container .quick-container .quick {
  margin: 10rpx;
  padding: 10rpx;
}
.remark-container .quick-container .quick .quick-text {
  border: 2rpx solid #c8c8c8;
  padding: 10rpx;
}
.remark-container .complete {
  background-color: #4cd964;
  color: white;
  margin-top: 20rpx;
}