.location-container .cur-location .cur-city .text {
  color: #319ded;
  font-size: 40rpx;
}
.location-container .cur-location .cur-city, .location-container .cur-location .tips {
  border-bottom: 2rpx solid #e4e4e4;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}
.location-container {
  background-color: whitesmoke;
  margin: 20rpx auto;
}
.location-container .cur-location {
  margin-bottom: 20rpx;
  background-color: white;
}
.location-container .cur-location .cur-city .text ::after {
  content: ">";
  right: 10rpx;
  position: absolute;
  font-size: 40rpx;
}
.location-container .hot-loaction {
  margin-top: 40rpx;
  background-color: white;
  padding-bottom: 5rpx;
}
.location-container .hot-loaction .tips2 {
  margin-left: 10rpx;
  border-top: 2rpx solid #e4e4e4;
  height: 80rpx;
  line-height: 80rpx;
}
.location-container .hot-loaction .hot-city {
  font-size: 40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
}
.location-container .hot-loaction .hot-city .hot-city-list {
  text-align: center;
  width: 180rpx;
  border: 1px solid #e4e4e4;
}
.location-container .group-city {
  margin-top: 40rpx;
  background-color: white;
  display: flex;
  flex-wrap: wrap;
}
.location-container .group-city .group-text {
  margin-left: 10rpx;
  width: 100%;
}
.location-container .group-city .group-container {
  margin: 3% 1%;
  font-size: 35rpx;
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1px solid #e4e4e4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}